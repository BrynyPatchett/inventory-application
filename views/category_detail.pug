extends layout 

block content 

    h1 Category: #{category.name}
    p #[strong Description] #{category.description}
    if itemsInCategory.length > 0
    p #[strong Items ]
        each item, index in itemsInCategory
          a(href= item.url) #{item.name}
          if index < itemsInCategory.length -1
           |,&nbsp;
        else 
         p No Items in category.
    p
    a(href=category.url+'/update') Update Category
    p
    a(href=category.url+'/delete') Delete Category