extends layout 
block content 
 h1 #{title}
 div.form
  form(method="POST")
    div.form-group
        label(for='name') Item:
        input(type='text', placeholder="Hammer", name='name', id="name" ,required value=(item===undefined? '' : item.name))
    div.form-group
        label(for='description') Description:
        input(type='text', placeholder="large hammer",id="description", name='description', required value=(item===undefined? '' : item.description))
    div.form-group
        label(for='price') Price:
        input(type='number', step="0.01" placeholder=0.0,id="price", name='price', required value=(item===undefined? '' : item.price))
    div.form-group
        label(for='stock') Stock:
        input(type='number', placeholder=0, name='stock',id="stock", required value=(item===undefined? '' : item.stock))
    div.form-group
        label Categories:
        div
        for category in Categories
            div
                if category.checked
                 input.checkbox-input(type='checkbox', name='category', value=category._id, checked)
                else
                 input.checkbox-input(type='checkbox', name='category', value=category._id)
                label(for=category._id) &nbsp;#{category.name}
    div.form-group
        if passRequired 
            label(for='password') Password:
            input(type='password', name='password',id="password", required)
    button(type='submit') Submit

 if errors 
    ul 
    for error in errors
     li!= error.msg
