extends layout 
block content 
 h1 #{title}
 form(method="POST")
    div.form-group
        label(for='name') Item:
        input(type='text', placeholder="Hammer", name='name', required value=(item===undefined? '' : item.name))
    div.form-group
        input(type='text', placeholder="large hammer", name='description', required value=(item===undefined? '' : item.description))
    div.form-group
        input(type='number', step="0.01" placeholder=0.0, name='price', required value=(item===undefined? '' : item.price))
    div.form-group
        input(type='number', placeholder=0, name='stock', required value=(item===undefined? '' : item.stock))
    div.form-group
        label Categories:
        div
        for category in Categories
            div
                if category.checked
                 input.checkbox-input(type='checkbox', name='category', value=category._id, checked)
                else
                 input.checkbox-input(type='checkbox', name='category', value=category._id)
                label(for=category._id) &nbsp;#{category.name}
    button(type='submit') Submit

    if errors 
     ul 
     for error in errors
      li!= error.msg
